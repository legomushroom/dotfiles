export RUST_BACKTRACE=1

# Git
git config --global user.name "Oleg Solomka" 2> /dev/null
git config --global user.email "legomushroom@gmail.com" 2> /dev/null
git config --global push.autoSetupRemote true 2> /dev/null
git config --global push.default current 2> /dev/null
git config pull.rebase false 2> /dev/null

# Kube
alias ku="kubectl"

# Bash
alias cfg="code ~/.bashrc-utils"
alias cfgf="code ~/.bashrc-functions.sh"
alias fresh="source ~/.bashrc"

# Rust
alias irust="curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y"
alias cb="cargo build"
alias ce="cargo run --example"

# Misc
alias kmsg="echo -e '---' | sudo tee -a /dev/kmsg > /dev/null"
alias csname="echo $CODESPACE_NAME"

source ~/.bashrc-functions.sh
